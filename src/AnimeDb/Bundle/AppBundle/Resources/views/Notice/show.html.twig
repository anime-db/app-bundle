<section class="b-notice">
	<div class="b-message">
		<button type="button" class="bt-notice-scroll bt-notice-scroll-left" title="{% trans %}Scroll left{% endtrans %}">{% trans %}Scroll left{% endtrans %}</button>
		{% autoescape false %}{{ notice.message }}{% endautoescape %}
		{% if link_all %}
			(<a href="{{ link_all }}" title="{% trans %}View all notices{% endtrans %}">{% trans %}All notices{% endtrans %}</a>)
		{% endif %}
		<button type="button" class="bt-notice-scroll bt-notice-scroll-right" title="{% trans %}Scroll right{% endtrans %}">{% trans %}Scroll right{% endtrans %}</button>
	</div>
	<div class="b-controls">
		<button type="button" class="bt-see-later" title="{% trans %}See notices later{% endtrans %}">{% trans %}See notices later{% endtrans %}</button>
		<button type="button" class="bt-close" title="{% trans %}Close{% endtrans %}">{% trans %}Close{% endtrans %}</button>
	</div>
</section>