{% extends 'AnimeDbAppBundle::popup.html.twig' %}

{% set popup_id = 'f-image-popup' %}

{% set content %}
<form action="{{ path('form_image_upload') }}" method="post" {{ form_enctype(form) }}>
	<div class="f-row">
		{{ form_row(form.remote, {'attr': {'placeholder': 'http://'}}) }}
	</div>
	<div class="f-row">
		{{ form_row(form.local, {'attr': {'accept': 'image/jpeg,image/jpg,image/gif,image/png,image/bmp'}}) }}
	</div>
	<div class="f-row">
		<label></label>
		<button type="submit">{% if change is defined %}{% trans %}Change image{% endtrans %}{% else %}{% trans %}Add image{% endtrans %}{% endif %}</button>
	</div>
</form>
{% endset %}
